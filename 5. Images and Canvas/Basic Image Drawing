<!DOCTYPE html>
<html>
<head>
  <title>Exercise 1: Basic Draw</title>
</head>
<body>
<canvas id="canvas1" width="500" height="300" style="border:1px solid #ccc;"></canvas>
<script>
const canvas = document.getElementById('canvas1');
const ctx = canvas.getContext('2d');
// Create an Image instance
const img = new Image();
img.src = 'https://via.placeholder.com/150'; // example placeholder image
img.onload = () => {
  // Draw the image at x=50, y=70
  ctx.drawImage(img, 50, 70);
};
</script>
</body>
</html>
